<script>
  const popupQuerySelector = "#listid";
  const popupEl = document.querySelector(popupQuerySelector);
  const popupBttn = document.querySelector("#btn");

  popupBttn.addEventListener("click", () => {
    setTimeout(() => {
      if (!popupEl.classList.contains("show")) {
        popupEl.classList.add("show");
      }
    }, 250);
  });
</script>
<script>
    function modal_confirm_create(message, no, yes, target, src) {
        $('#modal_confirm_message').text(message);
        $('#modal_confirm_no').text(no);
        $('#modal_confirm_yes').text(yes);
        $('#modal_confirm').attr("target", target);
        $('#modal_confirm').attr("src", src);
    }
    function showModalOfCreatingApplication() {
        modal_confirm_create("Чи впевнені Ви, що хочете створити оголошення?", "Відмінити", "Підтвердити", "yes");
        $('#modal_confirm').modal('show');
    }
    function showModalOfCanceling() {
        modal_confirm_create("Чи впевнені Ви, що хочете вийти з сторіки створення оголошення?", "Відмінити", "Підтвердити", "no");
        $('#modal_confirm').modal('show');
    }
    function showModalOfConfirmationDeletingAccount() {
        modal_confirm_create("Чи впевнені Ви, що хочете видалити акаунт?", "Відмінити", "Підтвердити", "sure");
        $('#modal_confirm').modal('show');
    }
    function showModalOfConfirmationLogingOutAccount() {
        modal_confirm_create("Чи впевнені Ви, що хочете вийти з акаунту?", "Відмінити", "Підтвердити", "sure");
        $('#modal_confirm').modal('show');
    }
    function modal_confirm() { window.location.href = 'http://localhost:3000/main' }
</script>

